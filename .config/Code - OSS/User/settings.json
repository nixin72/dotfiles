{
    //Window
    "window.newWindowDimensions": "maximized",
    "window.restoreFullscreen": true,
    "window.title": "${dirty}${activeEditorShort} - vscode",
    "window.titleBarStyle": "native",
    "window.menuBarVisibility": "hidden",
    "window.zoomLevel": 1,
    //Workbench
    "workbench.activityBar.visible": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.openPositioning": "first",
    "workbench.editor.restoreViewState": false,
    "workbench.editor.tabSizing": "shrink",
    "workbench.settings.editor": "json",
    "workbench.settings.useSplitJSON": true,
    "workbench.startupEditor": "none",
    "workbench.statusBar.feedback.visible": false,
    //Editor
    "editor.acceptSuggestionOnEnter": "smart",
    "editor.autoClosingBrackets": "always",
    "editor.autoClosingQuotes": "always",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.cursorWidth": 1,
    "editor.dragAndDrop": true,
    "editor.fontFamily": "'Fira Code', Consolas, 'Courier New', monospace",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.glyphMargin": false,
    "editor.insertSpaces": false,
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": true,
    "editor.renderIndentGuides": true,
    "editor.renderLineHighlight": "all",
    "editor.renderWhitespace": "boundary",
    "editor.rulers": [80, 100, 120],
    "editor.smoothScrolling": true,
    "editor.tabCompletion": "on",
    "editor.tabSize": 2,
    "editor.wordSeparators": "_`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 100,
    "editor.wrappingIndent": "indent",
    // Telemetry
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    //Files
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 30000,
    "files.associations": {
        "*.es": "javascript",
        "*.inc": "php",
    },
    "files.eol": "\n",
    "files.hotExit": "onExitAndWindowClose",
    "files.autoGuessEncoding": true,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    //Terminal
    "terminal.integrated.confirmOnExit": true,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontFamily": "Fira Code",
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.scrollback": 1000,
    "terminal.integrated.shell.linux": "/bin/zsh",
    "terminal.integrated.splitCwd": "initial",
    "terminal.integrated.windowsEnableConpty": false,
    // Python
    "python.autoComplete.addBrackets": true,
    "python.jediEnabled": false,
    "python.linting.enabled": false,
    "python.linting.pylintEnabled": false,
    // HTML/CSS
    "css.lint.float": "warning",
    "css.lint.idSelector": "warning",
    "css.lint.important": "warning",
    "css.lint.universalSelector": "warning",
    "html.format.indentHandlebars": true,
    "html.format.indentInnerHtml": true,
    "html.format.wrapLineLength": 100,
    "less.lint.boxModel": "warning",
    "less.lint.duplicateProperties": "warning",
    "less.lint.float": "warning",
    "less.lint.universalSelector": "warning",
    // Misc
    "breadcrumbs.enabled": true,
    "breadcrumbs.filePath": "last",

    "debug.allowBreakpointsEverywhere": true,
    "debug.enableAllHovers": true,
    "debug.inlineValues": true,

    "java.completion.guessMethodArguments": true,
    "java.import.gradle.enabled": false,
    "java.import.maven.enabled": false,

    "search.exclude": {
        "**/node_modules": false
    },
    "search.showLineNumbers": true,
    "search.smartCase": true,

    "scm.diffDecorationsGutterWidth": 1,
    "scm.diffDecorations": "overview",

    "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/init.vim",
    "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",

    "disableLigatures.mode": "Line",
    "eslint.alwaysShowStatus": true,
    "explorer.openEditors.visible": 0,
    "extensions.ignoreRecommendations": true,
    "markdown.extension.print.imgToBase64": true,
    "php.validate.executablePath": "/usr/bin/php",
    "typescript.updateImportsOnFileMove.enabled": "always",
}
